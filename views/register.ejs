<%- include('partials/header') %>

<body style="background-color: #508bfc;">
  <section class="vh-100">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card shadow-2-strong" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
  
              <h3 class="mb-5">Register</h3>
  
              <!-- Registration Form -->
              <form action="/register" method="POST">
                <div class="form-outline mb-4">
                  <input type="email" id="typeEmailX-2" class="form-control form-control-lg" name="username" />
                  <label class="form-label" for="typeEmailX-2">Email</label>
                </div>
  
                <div class="form-outline mb-4">
                  <input type="password" id="typePasswordX-2" class="form-control form-control-lg" name="password" />
                  <label class="form-label" for="typePasswordX-2">Password</label>
                </div>
  
                <div class="form-outline mb-4">
                  <input type="password" id="typeConfirmPasswordX-2" class="form-control form-control-lg" name="confirm_password" />
                  <label class="form-label" for="typeConfirmPasswordX-2">Confirm Password</label>
                </div>
  
                <% if (locals.error) { %>
                  <p style="color: red;"><%= error %></p>
                <% } %>
  
                <button type="submit" class="btn btn-primary btn-lg btn-block mb-4" style="background-color: #007bff; border-color: #007bff;">Register</button>
  
                <p class="mb-4" style="text-align: center;">Already have an account? <a href="/login" style="color: #007bff;">Login</a></p>
  
                <hr class="my-4">
  
                <!-- Google Sign-Up Button -->
                <a href="/auth/google" class="btn btn-lg btn-block" style="background-color: #dd4b39; color: white;">
                  <i class="fab fa-google me-2"></i> Sign Up with Google
                </a>
  
              </form>
  
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>



<%- include('partials/footer') %>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Font Awesome -->
