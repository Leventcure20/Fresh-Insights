    <style>
      body {
        background-color: #f5f5f5; /* Light gray background color */
        margin: 0;
        font-family: Arial, sans-serif;
      }
      .jumbotron {
        background-color: #4a90e2; /* Muted blue background for jumbotron */
        color: #fff;
        padding: 5rem 2rem;
        text-align: center;
        border-radius: 8px;
      }
      .btn-primary {
        background-color: #fff;
        color: #4a90e2; /* Matching text color with jumbotron */
        border: 2px solid #fff;
        margin-right: 1rem; /* Add space between buttons */
      }
      .btn-primary:hover {
        background-color: #4a90e2;
        color: #fff;
      }
      .btn-secondary {
        background-color: #333;
        color: #fff;
        border: 2px solid #333;
      }
      .btn-secondary:hover {
        background-color: #222;
        border-color: #222;
      }
      .button-group {
        display: flex;
        justify-content: center;
        gap: 1rem; /* Space between buttons */
      }
      footer {
      background-color: #333;
      color: #fff;
      padding: 1rem 0;
      text-align: center;
    }
    .footer a {
      color: #ddd;
      text-decoration: none;
    }
    .footer a:hover {
      color: #fff;
    }
    </style>
</head>
